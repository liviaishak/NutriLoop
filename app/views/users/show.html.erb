<div class="row">
   <div class="pull-right @user-info"> <br>
     <%= link_to "Edit Profile", edit_user_path(@user), class: 'btn btn-success' %>
   </div>
   <h1>Hello <%= @user.fname %>!</h1>
</div>

<!-- <%  @user.physical_activity_none = 1.2 %>
<%  @user.physical_activity_light = 1.375 %>
<%  @user.physical_activity_mod = 1.55 %>
<%  @user.physical_activity_very_active = 1.725 %> -->

<% formula_female = ((@user.weight * 4.35) + (@user.height * 4.7) - (@user.age * 4.7) + 655) %>
<% formula_male = ((@user.weight * 6.23) + (@user.height * 12.7) - (@user.age * 6.8) + 66) %>

<% if @user.gender == "female" && @user.physical_activity == "none" %>
  <% total_cal = formula_female * 1.2 %>
<% elsif @user.gender == "female" && @user.physical_activity == "light" %>
  <% total_cal = formula_female * 1.375 %>
<% elsif @user.gender == "female" && @user.physical_activity == "moderate" %>
  <% total_cal = formula_female * 1.55 %>
<% elsif @user.gender == "female" && @user.physical_activity == "active" %>
  <% total_cal = formula_female * 1.725 %>

<% elsif @user.gender == "male" && @user.physical_activity == "none" %>
  <% total_cal = formula_male * 1.2 %>
<% elsif @user.gender == "male" && @user.physical_activity == "light" %>
  <% total_cal = formula_male * 1.375 %>
<% elsif @user.gender == "male" && @user.physical_activity == "moderate" %>
  <% total_cal = formula_male * 1.55 %>
<% else @user.gender == "male" && @user.physical_activity == "active" %>
  <% total_cal = formula_male * 1.725 %>
<% end %>

<h4> Your total daily calories intake: <%= total_cal.to_d %> calories </h4>
<p> Total Carbohydrates : <%= total_cal.to_d * 0.5 %> calories </p>
<p>Total Proteins : <%= total_cal.to_d * 0.2 %> calories </p>
<p>Total Fat : <%= total_cal.to_d * 0.3 %> calories </p>
