<%= form_for @user do |f| %>
  <div class="form-group">
    <%= f.label :fname, "First Name" %>
    <%= f.text_field :fname, class: 'form-control', placeholder: "Enter first name" %>
  </div>
  <div class="form-group">
    <%= f.label :lname, "Last Name" %>
    <%= f.text_field :lname, class: 'form-control', placeholder: "Enter last name" %>
  </div>
  <div class="form-group">
    <%= f.label :age %>
    <%= f.number_field :age, class: 'form-control', placeholder: "Enter your age" %>
  </div>
  <div class="form-group">
    <%= f.label :gender, "Gender" %> <br>
    <%= f.radio_button :gender, 'male' %>
    <%= f.label :gender_male, "Male" %> 
    <%= f.radio_button :gender, 'female' %>
    <%= f.label :gender_female, "Female" %>
  </div>
  <div class="form-group">
    <%= f.label :height %>
    <%= f.text_field :height, class: 'form-control', placeholder: "Enter your height" %>
  </div>
  <div class="form-group">
    <%= f.label :weight %>
    <%= f.text_field :weight, class: 'form-control', placeholder: "Enter your weight" %>
  </div>

  <div class="form-group">
    <%= f.submit "Track", class: 'btn btn-success' %>
  </div>
<% end %>
